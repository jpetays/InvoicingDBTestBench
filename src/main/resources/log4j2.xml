<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_DIR">logs</Property>
        <Property name="LOG_NAME">db_testbench</Property>
    </Properties>
    <Appenders>
        <!-- https://logging.apache.org/log4j/2.x/manual/layouts.html#PatternLayout -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %c{1} - %msg%n"/>
        </Console>
        <!-- https://logging.apache.org/log4j/2.x/manual/appenders.html#FileAppender -->
        <RollingFile name="File"
                     fileName="${LOG_DIR}/${LOG_NAME}.log"
                     filePattern="${LOG_DIR}/${LOG_NAME}.%i.log"
                     ignoreExceptions="false"
                     append="true">
            <Policies>
                <SizeBasedTriggeringPolicy size="1MB" />
            </Policies>
            <DefaultRolloverStrategy max="5">
                <Delete basePath="${LOG_DIR}" maxDepth="2">
                    <IfFileName glob="*.log" />
                    <IfLastModified age="P2D" />
                </Delete>
            </DefaultRolloverStrategy>
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %c{2} - %msg%n"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="homebeach" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="petays" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>